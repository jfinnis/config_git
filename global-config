[color]
	ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    a = add
    am = commit --amend
    ap = add --patch
    b = branch
    c = commit -m
    ca = commit -am
    co = checkout
    cp = cherry-pick
    d = diff
    dc = diff --cached
    i = ls-files -o -i --exclude-standard
    l = log --graph --stat
    lo = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lp = log -p
    p = push
    r = reset --hard HEAD
    s = status
    us = reset HEAD
    uc = reset --soft HEAD^

[interactive]
	singlekey = true
