[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    a = add
    ap = add --patch
    b = branch
    c = commit -m
    ca = commit --amend
    co = checkout
    cm = checkout master
    cp = cherry-pick
    d = "!f() { git diff -- ':!package-lock.json' \"$@\"; }; f"
    dc = diff --cached
    f = fetch
    i = ls-files -o -i --exclude-standard
    l = log --graph --stat --decorate
    lo = log --graph --abbrev-commit --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset%s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lp = log -p --ignore-all-space -- . ':!package-lock.json'
    p = push
    po = pull origin master
    r = reset HEAD
    rs = restore --staged .
    s = status
    sa = submodule add
    sl = stash list
    sp = stash pop
    st = stash
    us = reset HEAD
    uc = reset --soft HEAD^

[interactive]
    singlekey = true
    diffFilter = delta --color-only --features=interactive

[web]
    browser = open

[http]
    sslverify = false

[url "https://github.com/"]
    insteadOf = git://github.com/

[url "https://"]
    insteadOf = git://

[push]
    autoSetupRemote = true

[branch]
	sort = -committerdate

[core]
    editor = nvim
    pager = delta

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[delta]
    navigate = true
    features = mantis
    line-numbers = true
    hyperlinks = true
    side-by-side = true
    keep-plus-minus-markers = false

[delta "mantis"]
    dark = true
    side-by-side = true
    keep-plus-minus-markers = true
    hyperlinks = true
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    file-style = omit
    zero-style = syntax
    syntax-theme = Monokai Extended
    commit-decoration-style = 232 "#ffd21a" box
    commit-style = 232 bold italic "#ffd21a"
    hunk-header-decoration-style = "#1688f0" box ul
    hunk-header-file-style = "#ffd21a" ul bold
    hunk-header-line-number-style = "#ffd21a" box bold
    hunk-header-style = file line-number syntax bold italic
    line-numbers = true
    line-numbers-left-format = "{nm:>1}|"
    line-numbers-left-style = "#1688f0"
    line-numbers-minus-style = "#ff0051" bold
    line-numbers-plus-style = "#03e57f" bold
    line-numbers-right-format = "{np:>1}|"
    line-numbers-right-style = "#1688f0"
    line-numbers-zero-style = "#aaaaaa" italic
    minus-emph-style = syntax bold "#b80000"
    minus-style = syntax "#5d001e"
    plus-emph-style = syntax bold "#007800"
    plus-style = syntax "#004433"
    whitespace-error-style = "#280050"
[init]
	defaultBranch = main
