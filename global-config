[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    a = add
    ap = add --patch
    b = branch
    c = commit -m
    ca = commit --amend
    co = checkout
    cm = checkout master
    cp = cherry-pick
    d = diff
    dc = diff --cached
    f = fetch
    i = ls-files -o -i --exclude-standard
    l = log --graph --stat --decorate
    lj = log --graph --stat --decorate --author=finnis
    lo = log --graph --abbrev-commit --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset%s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lp = log -p
    p = push
    po = pull origin master
    r = reset HEAD
    rhh = reset --hard HEAD
    s = status
    sa = submodule add
    sl = stash list
    sp = stash pop
    st = stash
    us = reset HEAD
    uc = reset --soft HEAD^

[interactive]
    singlekey = true
[user]
    email = josh.finnis@bunchball.com
    name = Joshua Finnis
[web]
    browser = open
